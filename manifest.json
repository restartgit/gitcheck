{
	"manifest_version": 2,

	"name": "GitHub check",
	"description": "Проверь, есть ли код в GitHub.",
	"version": "1.2.5",

	"icons": {
		"128": "img/icon_128.png",
		"64": "img/icon_64.png",
		"32": "img/icon_32.png",
		"16": "img/icon_16.png"
	},

	"browser_action": {
		"default_title": "GitHub check",
		"default_icon": "img/icon_64.png",
		"default_popup": "main.html"
	},

	"background":{
		"scripts": ["background.js"]
	},
	
	"permissions": ["contextMenus"]
}
